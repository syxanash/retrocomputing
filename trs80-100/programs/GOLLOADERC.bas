5 CLS
10 INPUT "ENTER COLUMN SIZE"; COLS
20 INPUT "ENTER ROWS SIZE"; ROWS
30 GRID = COLS * ROWS
40 DIM CGEN(GRID)
50 DIM NGEN(GRID)
60 INPUT "ENTER RANDOM SEED"; SEED%
70 LF = INT(RND(SEED%*-2))
80 PRINT "INITIALISING GRID..."
90 FOR I = 0 TO GRID
100 LF = INT(2*RND(1))
110 CGEN(I) = LF
120 NEXT I
130 CLS
140 FOR I = 0 TO GRID-1
150 IF CGEN(I) = 0 THEN PRINT " "; ELSE PRINT "@";
160 IF ((I+1) MOD COLS) = 0 THEN PRINT ""
170 NEXT I
180 RC = 0
190 BOXCO# = 0
200 MABOX = 37
210 PASSO# = MABOX / GRID
220 FOR I = 0 TO GRID-1
230 GOSUB 410
240 NGB = 0 : TR = (((RC - 1) + ROWS) MOD ROWS) : BR = ((RC + 1) MOD ROWS)
250 A = (((((I - 1) MOD COLS)) + COLS) MOD COLS) + (COLS*RC) : B = ((I + 1) MOD COLS) + (COLS*RC) : C = (((((I - COLS - 1) MOD COLS)) + COLS) MOD COLS) + (COLS*TR) :	D = (((((I - COLS + 1) MOD COLS)) + COLS) MOD COLS) + (COLS*TR)
260 E = (((((I - COLS) MOD COLS)) + COLS) MOD COLS) + (COLS*TR) :	F = ((I + COLS) MOD COLS) + (COLS*BR) :	G = ((I + COLS + 1) MOD COLS) + (COLS*BR) :	H = ((I + COLS - 1) MOD COLS) + (COLS*BR)
270 NGB = CGEN(A) + CGEN(B) + CGEN(C) + CGEN(D) + CGEN(E) + CGEN(F) + CGEN(G) + CGEN(H)
280 IF CGEN(I) = 1 AND NGB < 2 THEN NGEN(I) = 0
290 IF CGEN(I) = 1 AND (NGB = 2 OR NGB = 3) THEN NGEN(I) = 1
300 IF CGEN(I) = 1 AND NGB > 3 THEN NGEN(I) = 0
310 IF CGEN(I) = 0 AND NGB = 3 THEN NGEN(I) = 1
320 IF ((I + 1) MOD COLS) = 0 THEN RC = RC + 1
330 NEXT I
340 CLS
350 FOR I = 0 TO GRID-1
360 IF NGEN(I) = 0 THEN PRINT " "; ELSE PRINT "@";
370 IF ((I+1) MOD COLS) = 0 THEN PRINT ""
380 CGEN(I) = NGEN(I)
390 NEXT I
400 GOTO 180
410 REM FUNCTION PRINT_LOADER
420 BOXCO# = (BOXCO# + PASSO#)
430 BOXES$ = ""
440 FOR J = 0 TO INT(BOXCO#)
450 BOXES$ = BOXES$ + "="
460 NEXT J
470 PRINT @318, "|"; : PRINT @280, BOXES$;
480 RETURN